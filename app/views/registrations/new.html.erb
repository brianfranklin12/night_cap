<div class="container max-w-sm md:max-w-md mx-auto flex-1 flex flex-col items-center justify-center px-2 mt-2 md:mt-16">
  <div class="bg-white px-6 py-6 rounded shadow-2xl text-grey w-full">
    <h1 class="mb-4 text-3xl text-center font-header">Sign Up</h1>

    <%= form_with model: @user, url: signup_path do |f| %>
      <%= render "shared/form_errors", f: f %>
      <%= f.label :username, class: "text-lg" %>
      <%= f.text_field :username, class: "block border border-grey-light w-full p-2 rounded mb-2" %> <br>
      <%= f.label :email, class: "text-xl" %>
      <%= f.text_field :email, class: "block border border-grey-light w-full p-2 rounded mb-2" %> <br>
      <%= f.label :password, class: "text-xl" %>
      <%= f.password_field :password, class: "block border border-grey-light w-full p-2 rounded mb-2" %> <br>
      <%= f.label :password_confirmation, class: "text-xl" %>
      <%= f.password_field :password_confirmation, class: "block border border-grey-light w-full p-2 rounded mb-2" %> <br>
      <%= f.submit "Sign Up", class: "w-full text-center py-2 rounded bg-red text-white hover:bg-red-dark" %>
    <% end %>
    <div class="text-center text-sm text-grey mt-4">
      <%= link_to "already signed up? click here to log in!", signin_path %>
    </div>
  </div>
</div>