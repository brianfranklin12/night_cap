<div class="md:container md:mx-auto border p-8 rounded shadow-md">
  <div class="grid grid-cols-1 md:grid-cols-3">
    <img src="/logo.svg" class="w-36 md:w-52 mx-auto my-auto">
    <div class="col-span-2">
      <h1 class="text-6xl md:text-8xl tracking-wider text-center font-header mb-4"><%= @cocktail.name %></h1>
      <h3 class="text-3xl md:text-4xl tracking-wide text-center font-header mb-8">by <%= link_to @cocktail.user.username, user_cocktails_path(@cocktail.user) %></h3>
      <p class="mx-4 text-md md:text-xl text-center md:text-right"><%= @cocktail.description %></p>
    </div>
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl text-center tracking-wider font-header text-grey mt-8 mb-4">Ingredients:</h1>
      <ul class="mb-8 md:mb-0">
        <% @cocktail.cocktail_ingredients.each do |ingredient| %>
          <li class="text-lg ml-6"> <%= ingredient.amount %> - <%= link_to ingredient.ingredient.name, ingredient_cocktails_path(ingredient.ingredient) %> </li>
        <% end %>
      </ul>
    </div>
    <div class="col-span-2 text-center md:text-right mr-0 md:mr-4 mt-4 md:mt-12">
      <% if @cocktail.user == current_user %>
        <div class="mb-8">
          <%= link_to "Edit Cocktail", edit_cocktail_path(@cocktail), class: "bg-yellow hover:bg-yellow-dark text-xl text-grey-dark py-2 px-4 rounded-lg" %>
        </div class="mb-8">
      <% end %>
      <div>
        <%= link_to "Back to Cocktail Collection", cocktails_path, class: "bg-purple hover:bg-purple-dark text-xl text-white py-2 px-4 rounded-lg" %>
      </div>
    </div>
  </div>
</div>

<%# displays a like / unlike button %>
<%# <%= render "like_button" %>

<div class="flex flex-col justify-center">
  <%# prints out every comment following the formatting of the comment partial %>
  <%= render @comments %>
</div>

<div class="flex flex-col justify-center">
  <%# Renders comment form partial for creating comments on specific cocktail by current user %>
  <%= render partial: "comment_form", locals: { comment: @cocktail.comments.build, cocktail: @cocktail } %>
</div>


