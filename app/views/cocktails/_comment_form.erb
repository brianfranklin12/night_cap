<%= form_with url: "/cocktails/#{cocktail.id}/comments" do |f| %>
  <%= f.text_area :"comment[body]", placeholder: "Leave a comment here.", class: "p-2 rounded w-full md:w-1/2 shadow-md my-4" %> <br>
  <%= f.submit "Comment", class: "px-4 py-2 rounded bg-red hover:bg-red-dark text-white cursor-pointer" %>
<% end %>

