<div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
  <div class="bg-white px-6 py-8 rounded shadow-2xl text-grey w-full">
    <h1 class="mb-8 text-3xl text-center font-header">Sign In</h1>

    <%= form_with url: signin_path do |f| %>
      <%= f.label :email, class: "text-xl" %>
      <%= f.text_field :email, class: "block border border-grey-light w-full p-3 rounded mb-4" %> <br>
      <%= f.label :password, class: "text-xl" %>
      <%= f.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4" %> <br>
      <%= f.submit "Sign In", class: "w-full text-center py-3 rounded bg-red text-white hover:bg-red-dark" %>
    <% end %>

    <div class="text-center text-sm text-grey mt-4">
      <%= link_to "need to sign up? click here!", signup_path %>
    </div>
  </div>
</div>